<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vivid.designs.wifimouse.RemoteActivity">

    <!-- The navigation drawer -->
    <fragment
        android:id="@+id/left_drawer"
        android:name="vivid.designs.wifimouse.NavigationListFragment"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/MenuBackground" />

    <!-- The settings drawer -->
    <LinearLayout android:id="@+id/right_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/MenuBackground"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">
            <TextView
                android:id="@+id/remote_settings_title"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8ffffff"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/remote_settings_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Fake action bar -->
        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <LinearLayout
                android:id="@+id/navigation_button"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <RelativeLayout
                    android:layout_width="35sp"
                    android:layout_height="match_parent">
                    <vivid.designs.wifimouse.FixedAspectRatioRelativeLayout
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_menu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </vivid.designs.wifimouse.FixedAspectRatioRelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textSize="21dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:text="Mouse &amp; Keyboard"
                android:textAllCaps="true" />

            <RelativeLayout
                android:id="@+id/open_settings_button"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="35sp"
                android:layout_height="match_parent"
                android:padding="3sp">
                <vivid.designs.wifimouse.FixedAspectRatioRelativeLayout
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_more_vert"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </vivid.designs.wifimouse.FixedAspectRatioRelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Remote area: -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <!-- Container for all remotes -->
                <FrameLayout
                    android:id="@+id/remote_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </FrameLayout>

                <!-- Touchpad overlayed on all remotes. -->
                <fragment
                    android:id="@+id/touchpad_fragment"
                    android:name="vivid.designs.wifimouse.MouseKeyboardFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <!-- Media keys slideout -->
                <LinearLayout
                    android:id="@+id/media_buttons_slideout"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:background="@color/keyboard_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <vivid.designs.wifimouse.MyButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PrevSong"
                            drawable="ic_prev_song"
                            drawablePadding="30"/>
                        <vivid.designs.wifimouse.MyButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PauseSong"
                            drawable="ic_pause"
                            drawablePadding="30"/>
                        <vivid.designs.wifimouse.MyButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NextSong"
                            drawable="ic_next_song"
                            drawablePadding="30"/>
                        <vivid.designs.wifimouse.MyButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="VolumeMute"
                            drawable="ic_volume_mute"
                            drawablePadding="30"/>
                        <vivid.designs.wifimouse.MyButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="VolumeDown"
                            drawable="ic_volume_down"
                            drawablePadding="30"/>
                        <vivid.designs.wifimouse.MyButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="VolumeUp"
                            drawable="ic_volume_up"
                            drawablePadding="30"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:clickable="false"
                        android:background="@drawable/v_shadow" />
                </LinearLayout>

                <!-- Special keys & EditText -->
                <LinearLayout
                    android:id="@+id/keyboard_top_slideout"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/special_keys"
                        android:background="@color/keyboard_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- Win to Fn -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <vivid.designs.wifimouse.MyButton
                                android:id="@+id/special_win_key"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Win"
                                enable_sticky="true"/>
                            <vivid.designs.wifimouse.MyButton
                                android:id="@+id/special_ctrl_key"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ctrl"
                                enable_sticky="true"/>
                            <vivid.designs.wifimouse.MyButton
                                android:id="@+id/special_shift_key"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Shift"
                                enable_sticky="true"/>
                            <vivid.designs.wifimouse.MyButton
                                android:id="@+id/special_alt_key"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Alt"
                                enable_sticky="true"/>
                            <vivid.designs.wifimouse.MyButton
                                android:id="@+id/special_menu_key"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Menu"
                                enable_sticky="true"/>
                            <vivid.designs.wifimouse.MyButton
                                android:id="@+id/special_keys_toggler"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="..."/>
                        </LinearLayout>
                        <!-- Insert to Arrow keys -->
                        <LinearLayout
                            android:id="@+id/special_keys_pg1"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Insert"
                                    nonSticky="true"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Home"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="PgU"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Tab"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Up"
                                    drawable="ic_keyboard_arrow_up"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Esc"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Delete"
                                    nonSticky="true"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="End"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="PgD"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Left"
                                    drawable="ic_keyboard_arrow_left"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Down"
                                    drawable="ic_keyboard_arrow_down"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Right"
                                    drawable="ic_keyboard_arrow_right"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/special_keys_pg2"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F1"
                                    nonSticky="true"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F2"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F3"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F4"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F5"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F6"
                                    nonSticky="true"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F7"
                                    nonSticky="true"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F8"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F9"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F10"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F11"/>
                                <vivid.designs.wifimouse.MyButton
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="F12"
                                    nonSticky="true"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/edittext_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <vivid.designs.wifimouse.MyEditText
                            android:id="@+id/text_input"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:overScrollMode="always"
                            android:ellipsize="start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:padding="8dp"
                            android:textSize="18dp"
                            android:textColor="#485258"
                            android:background="@color/keyboard_color_2" />
                    </LinearLayout>
                    <View
                        android:id="@+id/keyboard_slideout_shadow"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:clickable="false"
                        android:background="@drawable/v_shadow" />
                </LinearLayout>

                <!-- Network status box -->
                <fragment
                    android:id="@+id/network_status_fragment"
                    android:name="vivid.designs.wifimouse.NetworkStatusFragment"
                    android:layout_width="match_parent"
                    android:layout_height="75dp" />
            </FrameLayout>

            <!-- Mouse, Keyboard, and Media toggle buttons: -->
            <View
                android:background="@color/darken"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48sp">
                <RelativeLayout
                    android:id="@+id/toggle_mouse_button"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <vivid.designs.wifimouse.FixedAspectRatioRelativeLayout
                        android:id="@+id/touchpad_mouse_icon"
                        android:background="@drawable/ic_mouse_selected"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/toggle_keyboard_button"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <vivid.designs.wifimouse.FixedAspectRatioRelativeLayout
                        android:id="@+id/toggle_keyboard_icon"
                        android:background="@drawable/ic_keyboard"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/toggle_media_button"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <vivid.designs.wifimouse.FixedAspectRatioRelativeLayout
                        android:id="@+id/toggle_media_icon"
                        android:background="@drawable/ic_media"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
